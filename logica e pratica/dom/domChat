  <h1 id="titulo">Titulo Da Postagem</h1>
  <button onclick="trocarTitulo()">Trocar Título</button>

  <script> 
  
  
    function trocarTitulo() {
    let titulo1 = document.getElementById('titulo');
    let novoTitulo = 'Novo Título da Postagem';
    let tituloElemento = "Titulo Da Postagem"

    }
    if(titulo.textContent == tituloElemento){
      titulo.textContent = novoTitulo;
    }else{
      titulo.textContent = tituloElemento;
    }
  </script>

